// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Restaurant {
  id           String   @id @default(cuid())
  name         String
  image        String
  description  String
  rating       Float
  deliveryTime String // e.g., "30-45 min"
  deliveryFee  Float
  minOrder     Float
  cuisine      String[] // e.g., ["Italian", "Pizza"]
  isVeg        Boolean  @default(false)
  isOpen       Boolean  @default(true)
  location     String
  priceRange   String // "budget", "mid-range", "premium"

  menuItems MenuItem[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("restaurants")
}

model MenuItem {
  id           String  @id @default(cuid())
  name         String
  description  String
  price        Float
  image        String
  category     String // e.g., "appetizer", "main", "dessert", "beverages"
  isVeg        Boolean @default(false)
  isVegan      Boolean @default(false)
  isGlutenFree Boolean @default(false)
  isSpicy      Boolean @default(false)
  rating       Float   @default(0)
  prepTime     String // e.g., "15-20 min"

  restaurant   Restaurant @relation(fields: [restaurantId], references: [id], onDelete: Cascade)
  restaurantId String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("menu_items")
}
